@using System
@using Sandbox
@using Sandbox.UI
@inherits PanelComponent
@namespace Conna.Inventory.Example

@if ( Inventory is null )
	return;

<root>
	<ExampleInventoryPanel @ref="InventoryPanelRef" Title="Inventory" Inventory="@Inventory" />
</root>

@code {
	public BaseInventory Inventory { get; set; }
	public ExampleInventoryPanel InventoryPanelRef { get; set; }

	protected override void OnTreeFirstBuilt()
	{
		base.OnTreeFirstBuilt();

		Inventory = new ExampleInventory( Id, 10, 5 );

		StateHasChanged();
	}
}
